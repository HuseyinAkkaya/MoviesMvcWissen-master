    var movies = Model.MovieDirectors.Select(e => e.Movie.Name).ToList();
}

<h2>Details</h2>

<div>
    <h4>Director</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Retired)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Retired)
        </dd>
       
        <dt>

            <text><b>Movies</b></text><br />
        </dt>

            @foreach (var a in @movies)
            {
                <dd>
                    @Html.DisplayFor(modelItem => a)
